rbac:
  create: true
controller:
  extraArgs:
    v: 3
  config:
    ssl-redirect: "true"
    hsts: "true"
    disable-ipv6: "true"
  stats:
    enabled: true
  metrics:
    enabled: true
    serviceMonitor:
      enabled: true
      additionalLabels: # needed to be picked up by our one and only prometheus-operator:
        release: prometheus-operator
  service:
    type: LoadBalancer
    loadBalancerIP: 
